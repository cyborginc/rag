FROM nvidia/cuda:12.2.0-runtime-ubuntu22.04

# Install Python and system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements first for better caching
COPY benchmarks/requirements.txt /app/benchmarks/
COPY pyproject.toml /app/

# Install Python dependencies
RUN pip3 install --no-cache-dir -r benchmarks/requirements.txt && \
    pip3 install --no-cache-dir \
    langchain \
    langchain-core \
    langchain-milvus \
    pymilvus \
    cyborgdb-py[langchain] \
    opentelemetry-api \
    opentelemetry-sdk \
    requests \
    matplotlib \
    seaborn \
    plotly

# Copy source code
COPY src/ /app/src/
COPY benchmarks/ /app/benchmarks/

# Make scripts executable
RUN chmod +x /app/benchmarks/run_benchmark.sh

# Set Python path
ENV PYTHONPATH=/app/src:$PYTHONPATH

# Default command
CMD ["/app/benchmarks/run_benchmark.sh", "full"]